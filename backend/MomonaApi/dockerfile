# ---------- build ----------
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src
COPY backend/MomonaApi/*.csproj backend/MomonaApi/
RUN dotnet restore backend/MomonaApi/MomonaApi.csproj
COPY backend/MomonaApi/ backend/MomonaApi/
RUN dotnet publish backend/MomonaApi/MomonaApi.csproj -c Release -o /app/out

# ---------- runtime ----------
FROM mcr.microsoft.com/dotnet/aspnet:9.0
WORKDIR /app
COPY --from=build /app/out .
# Do NOT hardcode port here; Render injects $PORT. We'll set ASPNETCORE_URLS in env vars.
CMD ["dotnet","MomonaApi.dll"]
